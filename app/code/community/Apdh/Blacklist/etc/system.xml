<?xml version="1.0"?>
<config>
    <sections>
        <blacklist_options translate="label" module="blacklist">
            <label>Blacklist</label>
            <tab>apdh</tab>
            <frontend_type>text</frontend_type>
            <sort_order>1</sort_order>
            <show_in_default>1</show_in_default>
            <show_in_website>1</show_in_website>
            <show_in_store>1</show_in_store>
            <groups>
                <data translate="label">
                    <label>Configurations</label>
                    <frontend_type>text</frontend_type>
                    <sort_order>1</sort_order>
                    <show_in_default>1</show_in_default>
                    <show_in_website>1</show_in_website>
                    <show_in_store>1</show_in_store>
                    <fields>
                        <enable>
                            <label>Enable protection</label>
                            <frontend_type>select</frontend_type>
                            <source_model>blacklist/options_choose</source_model>
                            <sort_order>1</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                            <comment>Enable or disabled protection</comment>
                        </enable>
                        <message>
                            <label>Message</label>
                            <frontend_type>text</frontend_type>
                            <sort_order>2</sort_order>
                            <show_in_default>2</show_in_default>
                            <show_in_website>2</show_in_website>
                            <show_in_store>2</show_in_store>
                            <comment>Specific message display</comment>
                        </message>
                        <allow>
                            <label>Protection active</label>
                            <frontend_type>multiselect</frontend_type>
                            <source_model>blacklist/options_modules</source_model>
                            <sort_order>3</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                            <comment>Select protection spam.</comment>
                        </allow>
                        <domains>
                            <label>Blacklist domanin</label>
                            <frontend_type>textarea</frontend_type>
                            <sort_order>5</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                            <comment>Specific domain separate by comma</comment>
                        </domains>
                        <emails>
                            <label>Specific email</label>
                            <frontend_type>textarea</frontend_type>
                            <sort_order>7</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                            <comment>Specific email separate by comma</comment>
                        </emails>
                    </fields>
                </data>
                <tracking translate="label">
                    <label>Tracking user's</label>
                    <frontend_type>text</frontend_type>
                    <sort_order>3</sort_order>
                    <show_in_default>1</show_in_default>
                    <show_in_website>1</show_in_website>
                    <show_in_store>1</show_in_store>
                    <fields>
                        <notice>
                            <frontend_model>blacklist/system_config_notice</frontend_model>
                            <sort_order>0</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </notice>
                        <enable>
                            <label>Enable tracking user's</label>
                            <frontend_type>select</frontend_type>
                            <source_model>blacklist/options_choose</source_model>
                            <sort_order>1</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                            <comment>Enable or disabled tracking user's</comment>
                        </enable>
                        <message>
                            <label>Message</label>
                            <frontend_type>text</frontend_type>
                            <sort_order>3</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                            <comment>Specific message display</comment>
                        </message>
                    </fields>
                </tracking>
            </groups>
        </blacklist_options>
    </sections>
</config>